# -*- mode: ruby -*-
# vi: set ft=ruby :

def salt_provision_semantic_release_box(context)
  context.vm.provision "salt", run: 'once' do |salt|
    salt.minion_config = "salt/etc/minion"
    salt.masterless = true
    salt.run_highstate = false
    salt.verbose = true
    salt.log_level = "info"
    salt.colorize = true
    salt.install_type = "stable"
    salt.python_version = "3"
    salt.bootstrap_options = "-P -c /tmp"
  end
end

Vagrant.configure("2") do |config|

  config.vagrant.plugins = ["vagrant-reload", "vagrant-scp"]

  config.vm.define "semantic-release-box" do |semantic_release_box|
    semantic_release_box.vm.box = "opensuse/Tumbleweed.aarch64"
    semantic_release_box.vm.hostname = "semantic-release-box"

    semantic_release_box.vm.provider "libvirt" do |v, override|
      override.vagrant.plugins = config.vagrant.plugins + ["vagrant-libvirt"]
      v.cpus = "1"
      v.cputopology sockets: "1", cores: "1", threads: "1"
      v.memory = "1024"
      v.disk_bus = "virtio"
      v.nic_model_type = "virtio-net-pci"
      v.nested = false
      v.cpu_mode = "custom"
      v.cpu_model = "cortex-a72"
      v.graphics_type = "none"
      v.machine_type = "virt"
      v.machine_arch = "aarch64"
      v.driver = "qemu"
      v.autostart = false

      override.vm.provision 'shell', run: 'once', inline: 'echo "send host-name \"semantic-release-box\";" >> /etc/dhclient.conf', privileged: true
      salt_provision_semantic_release_box override
      override.vm.provision 'reload'
    end

    semantic_release_box.vm.synced_folder "salt/roots/", "/srv/", type: "rsync"
    semantic_release_box.vm.synced_folder '.', '/vagrant', disabled: true
  end
end
